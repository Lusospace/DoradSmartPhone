<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoradSmartphone.Views.ManualPage"
             xmlns:model="clr-namespace:DoradSmartphone.Models"
             xmlns:controls="clr-namespace:DoradSmartphone.Controls;assembly=DoradSmartphone"
             Title="{Binding Title}">

    <ContentPage.Content>
        <controls:DraggableFrame BackgroundColor="LightGray"
                         BorderColor="DarkGray"                         
                         Padding="10"
                         WidthRequest="150"
                         HeightRequest="150"
                         CornerRadius="8"
                         Margin="10"
                         HorizontalOptions="Start"
                         VerticalOptions="Start"                         
                         IsDragging="{Binding IsDragging}"
                         TranslationX="{Binding TranslationX}"
                         TranslationY="{Binding TranslationY}">
            <!-- Widget Content -->
            <StackLayout>
                <Image Source="{Binding FileName}" 
               Aspect="AspectFit" 
               HeightRequest="80" 
               WidthRequest="80" 
               HorizontalOptions="Center" 
               VerticalOptions="Center" />
                <Label Text="{Binding Name}" 
               FontSize="12" 
               FontAttributes="Bold" 
               TextColor="Black" 
               HorizontalOptions="Center" 
               VerticalOptions="Center" />
            </StackLayout>
        </controls:DraggableFrame>
    </ContentPage.Content>
</ContentPage>