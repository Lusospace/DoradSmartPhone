<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoradSmartphone.Views.LoginPage"
             xmlns:viewmodel ="clr-namespace:DoradSmartphone.ViewModels"
             x:DataType = "viewmodel:LoginViewModel"
             Shell.NavBarIsVisible="False"
             Title="LoginPage">
    <VerticalStackLayout Spacing="20" Padding="30,0" VerticalOptions="Center">

        <Image
                Source="lusovu.png"
                SemanticProperties.Description="See Beyond!"
                HeightRequest="350"
                WidthRequest="350"
                HorizontalOptions="Center" 
                VerticalOptions="Start"/>

        <VerticalStackLayout Spacing="5">
            <Label Text="Welcome To Dorad!" FontSize="28" TextColor="RoyalBlue" HorizontalTextAlignment="Center"/>
            
        </VerticalStackLayout>

        <StackLayout Orientation="Horizontal">
            <Entry x:Name="Username" Placeholder="Enter Username" Text="{Binding Username}" />
        </StackLayout>

        <StackLayout Orientation="Horizontal">
            <Entry x:Name="Password" Placeholder="Enter Password" IsPassword="True" Text="{Binding Password}" />
        </StackLayout>

        <Button Text="Sign In" WidthRequest="100" CornerRadius="20" HorizontalOptions="Center" Command="{Binding LoginCommand}" />

        <StackLayout Orientation="Horizontal" Spacing="5" HorizontalOptions="Center">
            <Label Text="NÃ£o tem conta ?" TextColor="Gray"/>
            <Label Text="Criar conta" TextColor="Gray"/>
        </StackLayout>

    </VerticalStackLayout>
</ContentPage>