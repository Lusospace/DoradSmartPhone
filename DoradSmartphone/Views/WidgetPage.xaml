<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoradSmartphone.Views.WidgetPage"
             xmlns:model="clr-namespace:DoradSmartphone.Models"
             xmlns:viewmodel="clr-namespace:DoradSmartphone.ViewModels"             
             x:DataType ="viewmodel:WidgetViewModel"
             Title="{Binding Title}">

    <CollectionView ItemsSource="{Binding Images}" SelectionMode="Single" SelectionChangedCommand="{Binding ItemSelectedCommand}">
        <CollectionView.ItemsLayout>
            <GridItemsLayout Span="2" Orientation="Vertical"/>
        </CollectionView.ItemsLayout>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Image Source="{Binding ImageSource}" Aspect="AspectFit" HeightRequest="100" Grid.Row="0"/>
                    <CheckBox IsChecked="{Binding IsSelected}" Grid.Row="1"/>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>