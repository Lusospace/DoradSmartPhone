<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoradSmartphone.Views.DisplaySelectedItemsPage"
             xmlns:model="clr-namespace:DoradSmartphone.Models"
             Title="{Binding Title}">

    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="10">
            <Label Text="Selected Widgets" FontSize="15" HorizontalOptions="Center" />

            <ListView ItemsSource="{Binding SelectedItems}" SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="model:Widget">
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="10">
                                <Image Source="{Binding FileName}" 
                                       WidthRequest="24" HeightRequest="24"
                                       Margin="0, 0, 10, 0" />
                                <Label Text="{Binding Name}" VerticalOptions="Center" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Button Text="Manual" Command="{Binding ManualCommand}" Margin="5" />
                <Button Text="Automatic" Command="{Binding AutomaticCommand}" Margin="5" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>